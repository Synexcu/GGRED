---
const { url } = Astro.request;
const currentPath = new URL(url).pathname;

// Determine if the current page is GGRED or GGBLU
const isGGREDPage = currentPath === '/ggred';
const isGGBLUPage = currentPath === '/ggblu';
const isHomePage = currentPath === '/';

// Show the footer only on GGRED or GGBLU pages
const showFooter = isGGREDPage || isGGBLUPage;

// Show "Clan Members" for GGRED & GGBLU, and "Community Members" for Home
const showMembersSection = isGGREDPage || isGGBLUPage || isHomePage;
const membersText = isHomePage ? "Community Members" : "Clan Members";
const membersHref = isHomePage ? "#community" : "#members";
